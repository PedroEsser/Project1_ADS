<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee; 
		 http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    
    <display-name>Ontology Editor</display-name>
	
	<servlet>
		<servlet-name>LeTestServlet</servlet-name>
		<servlet-class>servlets.LeTestServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>LoginServlet</servlet-name>
		<servlet-class>servlets.LoginServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>CreateClassServlet</servlet-name>
		<servlet-class>servlets.CreateClassServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>EditClassServlet</servlet-name>
		<servlet-class>servlets.EditClassServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>DeleteClassServlet</servlet-name>
		<servlet-class>servlets.DeleteClassServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>CreateIndividualServlet</servlet-name>
		<servlet-class>servlets.CreateIndividualServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>EditIndividualServlet</servlet-name>
		<servlet-class>servlets.EditIndividualServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>DeleteIndividualServlet</servlet-name>
		<servlet-class>servlets.DeleteIndividualServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>LeTestServlet</servlet-name>
		<url-pattern>/leTest</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>LoginServlet</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>CreateClassServlet</servlet-name>
		<url-pattern>/create_class</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>EditClassServlet</servlet-name>
		<url-pattern>/edit_class</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>DeleteClassServlet</servlet-name>
		<url-pattern>/delete_class</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>CreateIndividualServlet</servlet-name>
		<url-pattern>/create_individual</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>EditIndividualServlet</servlet-name>
		<url-pattern>/edit_individual</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>DeleteIndividualServlet</servlet-name>
		<url-pattern>/delete_individual</url-pattern>
	</servlet-mapping>
	
	<welcome-file-list>
		<welcome-file>taxonomy.jsp</welcome-file>
	</welcome-file-list>
    
</web-app>